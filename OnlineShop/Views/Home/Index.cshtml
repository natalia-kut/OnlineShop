@{
    ViewData["Title"] = "OnlineShop — Moda męska";
}

<section class="py-5 text-white hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-7">
                <h1 class="display-4 fw-bold">Męska moda — styl i wygoda</h1>
                <p class="lead">Nowa kolekcja — klasyczne koszule, casualowe swetry i eleganckie dodatki. Zobacz najlepsze propozycje dla pewnego siebie mężczyzny.</p>
                <p>
                    <a class="btn btn-light btn-lg me-2" asp-controller="Products" asp-action="Index">Przeglądaj produkty</a>
                    @if (!(User?.Identity?.IsAuthenticated ?? false))
                    {
                        <a class="btn btn-outline-light btn-lg" asp-area="Identity" asp-page="/Account/Login">Zaloguj się</a>
                    }
                </p>
            </div>
            <div class="col-md-5 d-none d-md-block">
                <img src="~/images/homepage.jpg" alt="Moda męska" class="img-fluid rounded shadow" />
            </div>
        </div>
    </div>
</section>

<div class="container my-5">
    <h2 class="mb-4">Kategorie</h2>
    <div class="row g-3 mb-5">
        <div class="col-sm-6 col-md-4">
            <div class="card h-100">
                <img src="~/images/koszule.jpg" class="card-img-top" alt="Koszule" style="height:200px;object-fit:cover" />
                <div class="card-body">
                    <h5 class="card-title">Koszule</h5>
                    <p class="card-text">Eleganckie i casualowe koszule — idealne na co dzień i na specjalne okazje.</p>
                    <a asp-controller="Products" asp-action="Index" asp-route-category="Koszule" class="btn btn-primary">Zobacz koszule</a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-4">
            <div class="card h-100">
                <img src="~/images/swetry.jpg" class="card-img-top" alt="Swetry" style="height:200px;object-fit:cover" />
                <div class="card-body">
                    <h5 class="card-title">Swetry</h5>
                    <p class="card-text">Ciepłe i stylowe swetry na chłodniejsze dni.</p>
                    <a asp-controller="Products" asp-action="Index" asp-route-category="Swetry" class="btn btn-primary">Zobacz swetry</a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-4">
            <div class="card h-100">
                <img src="~/images/dodatki.jpg" class="card-img-top" alt="Dodatki" style="height:200px;object-fit:cover" />
                <div class="card-body">
                    <h5 class="card-title">Dodatki</h5>
                    <p class="card-text">Paski, zegarki i inne detale, które dopełnią Twój look.</p>
                    <a asp-controller="Products" asp-action="Index" asp-route-category="Dodatki" class="btn btn-primary">Zobacz dodatki</a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Products" asp-action="Index" class="btn btn-lg btn-primary">Zobacz wszystkie produkty</a>
    </div>
</div>
