@using Azure.Core
@model Product

@{
    ViewData["Title"] = "Szczegóły o produkcie";
}

<h1>@Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        <div class="product-detail-container">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="product-detail-img" onerror="this.src='/images/placeholder.png';" />
        </div>
    </div>
    <div class="col-md-6">
        <h4>Cena: <span class="fw-bold">@Model.Price.ToString("C")</span></h4>
        <p><strong>Kategoria:</strong> @Model.Category</p>
        <p><strong>Ilość w magazynie:</strong> @Model.Stock</p>
        <p><strong>Opis:</strong></p>
        <p>@Model.Description</p>

        @if (TempData["CartError"] != null)
        {
            <div class="alert alert-danger">@TempData["CartError"]</div>
        }

        <p>

            @if (Model.Stock > 0)
            {
                <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline-flex align-items-center ms-2 flex-nowrap">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="hidden" name="returnUrl" value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />
                    <div class="input-group me-2" style="width:110px; min-width:90px;">
                        <input type="number" name="quantity" class="form-control text-center" min="1" max="@Model.Stock" value="1" aria-label="Ilość" />
                    </div>
                    <button type="submit" class="btn btn-primary">Dodaj do koszyka</button>
                </form>
            }
            else
            {
                <button class="btn btn-secondary ms-2" disabled>Brak w magazynie</button>
            }

            @* only for ADMIN *@
            @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary ms-2">Edytuj</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">Usuń</a>
            }
            <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>

        </p>
    </div>
</div>


