@model List<CartItem>

@{
    ViewData["Title"] = "Koszyk";
}

<h1>Koszyk</h1>

@if (!Model.Any())
{
    <p>Twój koszyk jest pusty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Produkt</th>
                <th>Iloœæ</th>
                <th>Cena jednostkowa</th>
                <th>Razem</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Product?.Name ?? ("Produkt #" + item.ProductId))</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                    <td>
                        <form asp-controller="Cart" asp-action="Remove" method="post" class="d-inline">
                            <input type="hidden" name="cartItemId" value="@item.Id" />
                            <button class="btn btn-sm btn-danger">Usuñ</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <h4>Razem: @ViewBag.Total.ToString("C")</h4>
        <form asp-controller="Cart" asp-action="Checkout" method="post" class="m-0">
            <button class="btn btn-success">Z³ó¿ zamówienie</button>
        </form>
    </div>
}